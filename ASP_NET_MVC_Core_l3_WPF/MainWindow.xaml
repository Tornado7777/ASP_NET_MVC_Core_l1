<Window x:Class="ASP_NET_MVC_Core_l3_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ASP_NET_MVC_Core_l3_WPF" 
        xmlns:viewModel="clr-namespace:ASP_NET_MVC_Core_l3_WPF.Command.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <viewModel:ButtonViewModel x:Key="vm"></viewModel:ButtonViewModel>
    </Window.Resources>
    <Grid>
        <StackPanel Width="705" HorizontalAlignment="Center" VerticalAlignment="Center" Height="434">
            <Button Content="Click Me" Height="49" Width="175" Command="{Binding Source={StaticResource vm}, Path=ButtonCommand}"/>
            <TextBlock Height="161" TextWrapping="Wrap" Text="TextBlock" Width="333" RenderTransformOrigin="0.508,0.52" x:Name="textBlock1" x:FieldModifier="public"/>
        </StackPanel>
    </Grid>
</Window>
